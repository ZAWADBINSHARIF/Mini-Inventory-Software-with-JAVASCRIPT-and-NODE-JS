<!-- ============= start navbar ============= -->
<%- include('partials/navbar'); %> 
<!-- ============= end navbar ============= -->

   <!-- ================================= Start Product Image Viwer Modal ================================= -->

    <div
      class="modal fade"
      id="product-img-viewer-modal"
      tabindex="-1"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Product Image</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <img
              src="./Img/img2.jpg"
              class="img-fluid rounded-top product-img-size-view"
              alt=""
            />
          </div>
        </div>
      </div>
    </div>

    <!-- ================================= Exit Product Image Viwer Modal ================================= -->

    <div class="container">
      <!-- ============================= Start Search Bar ========================== -->

      <nav class="navbar navbar-light bg-light my-3">
        <div class="container-fluid justify-content-between">
          <h1 class="text-capitalize">Sale Item</h1>
          <form class="d-flex">
            <input
              id="searchProductName"
              class="form-control me-2"
              type="search"
              placeholder="Product Name"
              aria-label="Search"
              name="searchProductName"
              onkeyup="searchActionBar()"
            />
            <button
              id="search-btn"
              class="btn btn-outline-primary"
              type="submit"
            >
              Search
            </button>
          </form>
        </div>
      </nav>

      <!-- ============================= End Search Bar ========================== -->

      <!-- =============================== Start Customer Details Cart Viewer ======================== -->

      <div
        class="offcanvas offcanvas-end"
        tabindex="-1"
        id="customer-details-carts"
        aria-labelledby="offcanvasRightLabel"
      >
        <div class="offcanvas-header">
          <h5 id="offcanvasRightLabel">Customer Details</h5>
          <button
            type="button"
            class="btn-close text-reset"
            data-bs-dismiss="offcanvas"
            aria-label="Close"
          ></button>
        </div>
        <div class="offcanvas-body">
          <!-- ======================= start customer details form ========================== -->

          <form class="mb-3">
            <label>Customer Name</label>
            <input
              type="text"
              class="form-control my-2"
              placeholder="Customer Name"
              name="customer_name"
            />
            <label>Customer Address</label>
            <input
              type="text"
              class="form-control my-2"
              placeholder="Customer Address"
              name="customer_address"
            />
            <label>Customer Number</label>
            <input
              type="text"
              class="form-control my-2"
              placeholder="+88017XXXXXXXX"
              name="customer_number"
            />
          </form>

          <!-- ======================= end customer details form ========================== -->

          <div class="d-flex justify-content-between">
            <button
              type="button"
              class="btn btn-primary"
              data-bs-toggle="offcanvas"
              data-bs-target="#product-cart"
              aria-controls="offcanvasRight"
            >
              Back
            </button>
            <button id="cart-invoice-btn" type="button" class="btn btn-primary">
              Download Invoice
            </button>
          </div>
        </div>
      </div>

      <!-- =============================== end Customer Details Cart Viewer ======================== -->

      <!-- ================================ Start Cart View for show selected product ============================ -->

      <div class="cart-view d-flex justify-content-end">
        <div
          class="offcanvas offcanvas-end"
          tabindex="-1"
          id="product-cart"
          aria-labelledby="offcanvasRightLabel"
        >
          <div class="offcanvas-header">
            <h5 id="offcanvasRightLabel">Selected Product Cart</h5>
            <button
              type="button"
              class="btn-close text-reset"
              data-bs-dismiss="offcanvas"
              aria-label="Close"
            ></button>
          </div>

          <!-- ==================== Start Selected Product Table ========================== -->

          <table class="table">
            <thead>
              <tr>
                <th scope="col">Product</th>
                <th scope="col">Quantity</th>
                <th scope="col">Price</th>
                <th scope="col">Total</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>Chair</td>
                <td>3</td>
                <td>99Tk</td>
                <td>999Tk</td>
              </tr>
              <tr>
                <td>Chair</td>
                <td>3</td>
                <td>99Tk</td>
                <td>999Tk</td>
              </tr>
              <tr>
                <td colspan="3">ðŸ’°</td>
                <td>1998Tk</td>
              </tr>
            </tbody>
          </table>

          <!-- ==================== End Selected Product Table ========================== -->

          <div class="offcanvas-body">
            <div class="d-flex justify-content-end">
              <button
                id="cart-next-btn "
                type="button"
                class="btn btn-primary"
                data-bs-toggle="offcanvas"
                data-bs-target="#customer-details-carts"
                aria-controls="offcanvasRight"
              >
                Next
              </button>
            </div>
          </div>
        </div>

        <button
          type="button"
          class="btn btn-primary"
          data-bs-toggle="offcanvas"
          data-bs-target="#product-cart"
          aria-controls="offcanvasRight"
        >
          Show Cart
        </button>
      </div>

      <!-- ================================ End Cart View for show selected product ============================ -->

      <!-- ============================== Start Product table ================================== -->

      <div class="table-container">
        <table id="all-products-table" class="table table-striped my-2">
          <thead>
            <tr>
              <th scope="col">Picture</th>
              <th scope="col">Product Name</th>
              <th scope="col">Brand</th>
              <th scope="col">Description</th>
              <th scope="col">Price</th>
              <th scope="col">Quantity</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="td-img">
                <img
                  data-bs-toggle="modal"
                  data-bs-target="#product-img-viewer-modal"
                  src="./Img/Picture.jpeg"
                  class="img-thumbnail img-fluid product-img"
                  alt="..."
                />
              </td>
              <td>Television</td>
              <td>ARFL</td>
              <td class="td-descrip">
                Lorem ipsum dolor sit amet consectetur adipisicing elit. Culpa
                maxime sed deleniti, saepe repudiandae odit voluptas sunt quos
                cupiditate nostrum
              </td>
              <td>99Tk</td>
              <td class="text-center td-product-quantity">
                <input type="number" name="product_quantity" value="0" />
                <div class="error product_quantity">
                  Invalid Product Quantity
                </div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>

      <!-- ============================== End Product table ================================== -->
    </div>

    <!-- JavaScript File sale item  -->
    <script src="./js/sale_item.js"></script>
  </body>
</html>
