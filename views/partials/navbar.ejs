<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <!-- Bootstrap JS File  -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      defer
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>

    <!-- Font Aswesome JS File  -->
    <script
      src="https://kit.fontawesome.com/2e1da3a81b.js"
      defer
      crossorigin="anonymous"
    ></script>

    <!-- CSS File  -->
    <link rel="stylesheet" href="./styles/style.css" />

    <!-- main JavaScript file  -->
    <script src="./js/main.js" defer></script>

    <% if(locals.title == null){%>
    <title>No Title</title>
    <%}else{%>
    <title><%=locals.title%></title>
    <%}%>

    <!-- fab icon -->
    <link rel="shortcut icon" href="./images/fabicon.png" type="image/x-icon" />
  </head>
  <body>
    <!-- ======================== Start Nav Bar =========================== -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container">
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav w-100">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/all-product"
                >All Product</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/saleItem"
                >Sale Product</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/invoice"
                >All Invoices</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/setting"
                >Setting</a
              >
            </li>
            <% if(locals.loggedInUser && locals.loggedInUser.username) {%>
            <li class="nav-item ms-auto">
              <a class="nav-link text-uppercase" aria-current="page" href="#"
                ><%= locals.loggedInUser.username %></a
              >
            </li>
            <li class="nav-item">
              <a
                class="nav-link"
                aria-current="page"
                href="#"
                onclick="logout()"
                >Logout</a
              >
            </li>
            <% } else { %>
            <li class="nav-item ms-auto">
              <a class="nav-link" aria-current="page" href="/login">Login</a>
            </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>
    <!-- ======================== Exit Start Nav Bar =========================== -->

    <!-- ================================== start toast msg dailog ============================= -->
    <%- include('toast-msg/toast-msg'); %>
    <!-- ================================== end toast msg dailog ============================= -->

    <script>
      async function logout() {
        fetch("/login/logout", {
          method: "delete",
        }); 
        toaster(`User is logout successfully!`);
        setTimeout(() => {
          window.location.replace("/login");
        }, 1000);
      }
    </script>
  </body>
</html>
